<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_weiboitem_arrow_pop_corner_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pop_collectweibo"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/home_weiboitem_arrow_pop_topitem_bg_auto"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:text="收藏"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/followLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/pop_disfollow"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/home_weiboitem_arrow_pop_centeritem_bg_auto"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="取消关注"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/deleteLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/pop_deleteweibo"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/home_weiboitem_arrow_pop_bottomitem_bg_auto"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="删除"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </LinearLayout>


</LinearLayout>